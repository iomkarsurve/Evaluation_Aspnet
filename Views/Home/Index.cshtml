@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-start">
    <div class= ="col-md-4">
        <div class= ="card">
            <div class= ="card-header">

                <h3> Welcome @TempData["FullName"]</h3>
            </div>


            <div class="card-body">

                @if (TempData["FullName"] != null)
                {
                    <p>Name:@TempData["FullName"].ToString()</p>
                    <p>Email:@TempData["Email"].ToString()</p>
                    <a href="@Url.Action("Logout", "Home")" class="btn btn-warning">Logout</a>

                }
            </div>
        </div>
    </div>
</div>
